{{!-- Inputs for adding a category --}}
     <div class="container">
      <div class="row form-row align-items-center">
        <form id="addCategory" class="categoryInfo">
          <div>Add Category</div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
              </div>
              <input id="categoryInputName" type="text" class="form-control" placeholder="Category"
                aria-label="Category" aria-describedby="basic-addon1">

              {{!-- <div  class="input-group mb-3"> --}}

              <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Preference</label>
              <select class="custom-select mr-sm-2" id="categoryInputType">
                <option value="Budget">Budget</option>
                <option value="Cash">Cash</option>
                <option value="Savings">Savings</option>
                <option value="Expenses">Expenses</option>
              </select>
          </div>

         

            <button id="btn-add-bill" class="btn" type="submit">Add</button>
