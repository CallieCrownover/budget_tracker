  </nav>



  <div class="jumbotron jumbotron-fluid jumbotronOverview">



      <div class="row">
        <div class="col">
          <p class="logo"> <img src="../assets/css/images/budget_tracker_logo.svg" width="300" alt="budget tracker logo">
              </p>
              <div class = "together">
                  <h4 style="font-size: 30px"> <strong> It’s all coming together </strong></h4>
                  <p>
                  When you’re on top of your money, life is good. <br>
                  We help you effortlessly manage your finances <br> in one place.
                  </p>
              </div>
        </div>

        <div class="col">
          <p class="lead"> <img src="../assets/css/images/Ipad Pro2_mockup.png" width="600" alt="budget tracker logo"> </p>
      </div>

    </div>
</div>
  


<div class="jumbotron">
  <div class="row">
    <div class="col-md-5">
    <div class="panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
      <h3>Bills</h3>
    </div>
    <div class="panel-body">
      <ul>
        {{#each bills}}
          
          <p>:Bill Name {{billName}}</p>
              <p>Amount: {{website}}</p>
              <p>Date: {{dueDate}}</p>
            <li>
              {{this.id}}<span>.</span> {{this.billName}}


              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="true">
                <button type="submit" class="btn btn-warning btn-sm">Devour!</button>
              </form>
            </li>

         
        {{/each}}
      </ul>
    </div>
  </div>

  <div class = "row">
<div class = "col-md-5">
  <div class="panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
      <h3>Expenses</h3>
    </div>
    <div class="panel-body">
      <ul>
        {{#each expenses}}
         
          <p>expenseName: {{expenseName}}</p>
              <p>amount: {{amount}}</p>
              <p>Date: {{date}}</p>
              <p>category: {{CategoryType}}</p>
            <li>
              {{this.id}}<span>.</span> {{this.expenseName}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="false">
                <button type="submit" class="btn btn-warning btn-sm">Delete!</button>
              </form>
            </li>
        
        {{/each}}
      </ul>
</div>
    </div>
  </div>
  </div>
    
  </div>
  </div>
</div>



  

